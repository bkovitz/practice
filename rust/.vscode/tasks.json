{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "rustc: build active file",
            "type": "shell",
            "command": "rustc",
            "args": [
                "-g",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}

